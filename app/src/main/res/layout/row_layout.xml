<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPadding="16dp"
        card_view:contentPaddingBottom="0dp"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
           android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:text="Title"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/row_emp_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/imageView"
                android:text="Description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/row_email"
                android:layout_alignTop="@+id/row_emp_no"
                android:layout_toEndOf="@+id/row_emp_no"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="fill_parent"
                android:id="@+id/divider"
                android:background="@android:color/black"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="0dp"
                android:alpha = "0.12"
                android:layout_below="@id/imageView"/>

            <!--<TextView-->
                <!--android:id="@+id/deleteTxt"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/divider"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="Delete"/>-->

            <!--<TextView-->
                <!--android:id="@+id/updateTxt"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/divider"-->
                <!--android:layout_marginLeft="100dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="Update"/>-->

            <Button
                android:id="@+id/btn_delete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="10dp"
                android:text="Delete"
                android:textColor="#5c6bc0" />

            <Button
                android:id="@+id/btn_update"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="100dp"
                android:text="Update"
                android:textColor="#616161" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>